<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/project_name"
            style="@style/MediumLblue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/card_type"
            style="@style/MediumTurquoise3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/details"
            style="@style/MediumTurquoise3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/see_details"
            android:textStyle="italic" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/turquoise2" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TableRow
                android:background="#FAFAFA"
                android:gravity="center_vertical" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/MediumTurquoise3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:paddingRight="15dp"
                        android:text="@string/color_set" />

                    <ImageView
                        android:id="@+id/selected_color1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="left"
                        android:background="@android:color/transparent" />

                    <ImageView
                        android:id="@+id/selected_color2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:background="@android:color/transparent" />

                    <ImageView
                        android:id="@+id/selected_color3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:background="@android:color/transparent" />
                </LinearLayout>

                <Button
                    android:id="@+id/modifier_color"
                    style="@style/btnStyleActionTurquoise2Inv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:layout_weight="1"
                    android:text="@string/btn_modif" />
            </TableRow>

            <TableRow android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/number"
                    style="@style/MediumTurquoise3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3" />

                <Button
                    android:id="@+id/modifier_number"
                    style="@style/btnStyleActionTurquoise2Inv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="10dip"
                    android:layout_weight="1"
                    android:text="@string/btn_modif" />
            </TableRow>

            <TableRow android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/date"
                    style="@style/MediumTurquoise3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3" />

                <Button
                    android:id="@+id/modifier_date"
                    style="@style/btnStyleActionTurquoise2Inv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_weight="1"
                    android:text="@string/btn_modif" />
            </TableRow>
        </TableLayout>

        <TextView
            style="@style/MediumTurquoise3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="@string/file" />

        <ImageView
            android:id="@+id/file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/file"
            android:paddingTop="10dp"
            android:src="@drawable/ic_content_new_picture" />

        <TextView
            style="@style/MediumTurquoise2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="@string/infos" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@color/turquoise2" />

        <EditText
            android:id="@+id/infos"
            android:layout_width="match_parent"
            android:layout_height="@dimen/infos_height"
            android:layout_marginBottom="5dp"
            android:gravity="left|top"
            android:hint="@string/infos"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/submit"
            style="@style/btnStyleActionTurquoise2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="@string/btn_submit" />
    </LinearLayout>

</ScrollView>