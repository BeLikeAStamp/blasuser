<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="myMedium" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="MediumGreen" parent="@style/myMedium">
        <item name="android:textColor">#929d37</item>
    </style>

    <style name="MediumLblue" parent="@style/myMedium">
        <item name="android:textColor">#94cec1</item>
    </style>

    <style name="MediumPink" parent="@style/myMedium">
        <item name="android:textColor">#DE3764</item>
    </style>

    <style name="MediumGray" parent="@style/myMedium">
        <item name="android:textColor">#909090</item>
    </style>

    <style name="MediumHGray" parent="@style/myMedium">
        <item name="android:textColor">#3A3A3A</item>
    </style>

    <style name="MediumTurquoise3" parent="@style/myMedium">
        <item name="android:textColor">@color/turquoise3</item>
    </style>

    <style name="MediumTurquoise2" parent="@style/myMedium">
        <item name="android:textColor">@color/turquoise2</item>
    </style>

    <style name="MediumTurquoise1" parent="@style/myMedium">
        <item name="android:textColor">@color/turquoise1</item>
    </style>

    <style name="MediumGris1" parent="@style/myMedium">
        <item name="android:textColor">@color/gris1</item>
    </style>

    <style name="MediumGris2" parent="@style/myMedium">
        <item name="android:textColor">@color/gris2</item>
    </style>

    <style name="btnStyleAction" parent="@android:style/Widget.Button">
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">serif</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.6</item>
        <item name="android:padding">5dip</item>
    </style>

    <style name="btnStyleActionPink" parent="@style/btnStyleAction">
        <item name="android:textColor">@color/btn_pink_inv</item>
        <item name="android:background">@drawable/btn_action_pink</item>
    </style>

    <style name="btnStyleActionTurquoise2" parent="@style/btnStyleAction">
        <item name="android:textColor">@color/btn_turquoise2_inv</item>
        <item name="android:background">@drawable/btn_action_turquoise2</item>
    </style>

    <style name="btnStyleActionTurquoise2Inv" parent="@style/btnStyleAction">
        <item name="android:textColor">@color/btn_turquoise2</item>
        <item name="android:background">@drawable/btn_action_turquoise2_inv</item>
    </style>

    <style name="btnStyleActionTurquoise1" parent="@style/btnStyleAction">
        <item name="android:textColor">@color/btn_turquoise1_inv</item>
        <item name="android:background">@drawable/btn_action_turquoise1</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem" />

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem" />

</resources>