<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="MediumGreen" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#929d37</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="MediumLblue" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#94cec1</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="MediumPink" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#DE3764</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="MediumGray" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#909090</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="MediumHGray" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#3A3A3A</item>
        <item name="android:typeface">serif</item>
    </style>
    
     <style name="btnStyleActionPink" parent="@android:style/Widget.Button">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/btn_pink_inv</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.6</item>
        <item name="android:background">@drawable/btn_action_pink</item>
        <item name="android:padding">10dip</item>
    </style>
    
    
    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem"/>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem"/>

</resources>